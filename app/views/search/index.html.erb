<section class="full-width-content inside-container light padding-top-30">
	<div class="row">
		<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col- search-page">
			<div class="search-box-wrap">
				<input type="search" id="search" name="" class="" placeholder="Search for shows, movies, songs...">
				<a href="javascript:void(0)"><img src="/assets/cancel_search.svg" alt="cancel search" title="cancel search" class="cancel_search" style="display:none"></a>
			</div> 
			<h2 class="margin-bottom-20 margin-top-20 text-capitalize inline-block"  id="search_heading" style="display:none !important;">Search Result (<span class="search_count"></span>)</h2>
			<div class="row" id="search_all_results"> 
			<%@search_results.each do |s|%>
				<div class="col-xl-4 col-lg-4 col-md-6 col-sm-6 col- margin-bottom-10">
					<div class="row1">
					<div class="search-image-wrap">
						<img src="<%#=s['thumbnails']['medium_16_9']['url']%>" class="img-fluid rounded tile-box-shadow" alt="<%=s['title']%>" title="<%=s['title']%>">
					</div>
					<div class="search-category-wrap">
						<p class="search-tile-title"><%=s['title']%></p>
						<p class="search-tile-category"><%=s['theme'].capitalize%> | <%=s['language'].capitalize%> | <%=s['genres'][0].capitalize%></p>
					</div>
					</div>
					</div>
				<%end%>
			</div>
		</div>
		<div class="row" id="recent_search">
 	<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col- margin-bottom-30">
				<h2 class="margin-bottom-0 margin-top-15 text-capitalize inline-block">Recent search</h2>
				<ul class="list-group list-group-flush" id="user_recent_search">
				<li class="list-group-item border-top-0 padding-left-0">You have not searched anything recently!</li>
				</ul> 
			</div> 
		</div>
	</div>
</section>



<script type="text/javascript">
  var window_height = window.outerHeight;
  var window_height = window_height - 231;
  $('.full-width-content').css('min-height',window_height+'px');
  



$(document).ready(function(){
	var search_item = "<%=params[:search_item].present? ? "true" : "false"%>";
	if(search_item == "false"){
	if(getShemarooCookies().recent_search_data){
    var search_val = $.unique(getShemarooCookies().recent_search_data.split(","));
    $("#user_recent_search").html("");
    for(i=0; i < search_val.length;i++){
    	 $("#user_recent_search").append('<a href="/search/'+search_val[i]+'"><li class="list-group-item padding-left-0">'+search_val[i]+'</li> </a>')
    }

	}

	}
})
</script>